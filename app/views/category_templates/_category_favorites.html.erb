<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#category_favorites_new_form">
      Add favorite
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.favorites.each do |favorite| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/favorites/<%= favorite.id %>">
          <%= favorite.user_id %>
        </a>

        <%if current_user == favorite.user %>
          <a href="/delete_favorite_from_category/<%= favorite.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_favorites_new_form">
        <%= render partial: "category_templates/category_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>

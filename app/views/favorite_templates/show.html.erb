<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Favorite #<%= @favorite.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/favorites" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @favorite.user %>
          <a href="/favorites/<%= @favorite.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit favorite
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @favorite.user %>
          <a href="/delete_favorite/<%= @favorite.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete favorite
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @favorite.user.present? %>
          <a href="/users/<%= @favorite.user_id %>">
            <%= @favorite.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <% if @favorite.food.present? %>
          <a href="/categories/<%= @favorite.category_id %>">
            <%= @favorite.food.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@favorite.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@favorite.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>


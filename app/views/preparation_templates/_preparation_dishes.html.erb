<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dishes

    <a data-toggle="collapse" href="#preparation_dishes_new_form">
      Add recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @preparation.dishes.each do |recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/recipes/<%= recipe.id %>">
          <%= recipe.link %>
        </a>

        <a href="/delete_recipe_from_preparation/<%= recipe.id %>">
          Delete
        </a>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="preparation_dishes_new_form">
        <%= render partial: "preparation_templates/preparation_dishes_new_form" %>
      </div>
    </div>

  </ul>
</div>

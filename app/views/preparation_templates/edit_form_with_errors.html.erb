<!-- Validation failure messages -->
<% if @preparation.errors.any? %>
  <% @preparation.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit preparation #<%= @preparation.id %>
</h1>

<hr>

<!-- Form preparation start -->
<form action="/update_preparation/<%= @preparation.id %>" method="post">
<!-- Form preparation end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @preparation.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <button class="btn btn-block btn-outline-secondary">
    Update preparation
  </button>
</form>

<hr>

<a href="/preparations">
  Go back
</a>

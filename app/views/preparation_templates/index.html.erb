<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All preparations
    </h1>

    <a href="/preparations/new" class="btn btn-block btn-outline-secondary">
      Add a new preparation
    </a>
  </div>
</div>

<!-- Ransack Code start -->
<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "preparation_templates/preparations_search_form" %>
  </div>
</div>
<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @preparations.each do |preparation| %>
      <tr>
        <!-- Display preparation.id start -->
        <td>
          <%= preparation.id %>
        </td>
        <!-- Display preparation.id end -->

        <!-- Display preparation.name start -->
        <td>
          <%= preparation.name %>
        </td>
        <!-- Display preparation.name end -->

        <!-- Display preparation.created_at start -->
        <td>
          <%= time_ago_in_words(preparation.created_at) %> ago
        </td>
        <!-- Display preparation.created_at end -->

        <!-- Display preparation.updated_at start -->
        <td>
          <%= time_ago_in_words(preparation.updated_at) %> ago
        </td>
        <!-- Display preparation.updated_at end -->

        <td>
          <a href="/preparations/<%= preparation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @preparations, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Preparation #<%= @preparation.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/preparations" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/preparations/<%= @preparation.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit preparation
        </a>
      </div>

      <div class="col">
        <a href="/delete_preparation/<%= @preparation.id %>" class="btn btn-block btn-outline-secondary">
          Delete preparation
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @preparation.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@preparation.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@preparation.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "preparation_templates/preparation_dishes" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipes
    </h1>

    <a href="/recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Link
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Preparation
        </th>

        <th>
          Cook time
        </th>

        <th>
          Food
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <!-- Display recipe.id start -->
        <td>
          <%= recipe.id %>
        </td>
        <!-- Display recipe.id end -->

        <!-- Display recipe.link start -->
        <td>
          <%= recipe.link %>
        </td>
        <!-- Display recipe.link end -->

        <!-- Display recipe.cuisine_id start -->
        <td>
          <% if recipe.cuisine.present? %>
            <a href="/cuisines/<%= recipe.cuisine.id %>">
              <%= recipe.cuisine.name %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.cuisine_id end -->

        <!-- Display recipe.preparation_id start -->
        <td>
          <% if recipe.preparation.present? %>
            <a href="/preparations/<%= recipe.preparation.id %>">
              <%= recipe.preparation.name %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.preparation_id end -->

        <!-- Display recipe.cook_time start -->
        <td>
          <%= recipe.cook_time %>
        </td>
        <!-- Display recipe.cook_time end -->

        <!-- Display recipe.food_id start -->
        <td>
          <% if recipe.food.present? %>
            <a href="/categories/<%= recipe.food.id %>">
              <%= recipe.food.name %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.food_id end -->

        <!-- Display recipe.user_id start -->
        <td>
          <% if recipe.user.present? %>
            <a href="/users/<%= recipe.user.id %>">
              <%= recipe.user.email %>
            </a>
          <% end %>
        </td>
        <!-- Display recipe.user_id end -->

        <!-- Display recipe.created_at start -->
        <td>
          <%= time_ago_in_words(recipe.created_at) %> ago
        </td>
        <!-- Display recipe.created_at end -->

        <!-- Display recipe.updated_at start -->
        <td>
          <%= time_ago_in_words(recipe.updated_at) %> ago
        </td>
        <!-- Display recipe.updated_at end -->

        <td>
          <a href="/recipes/<%= recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recipes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

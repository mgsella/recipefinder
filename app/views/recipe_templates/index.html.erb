<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All recipes
    </h1>

    <a href="/recipes/new" class="btn btn-block btn-outline-secondary">
      Add a new recipe
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "recipe_templates/recipes_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Link
        </th>

        <th>
          Cuisine
        </th>

        <th>
          Preparation
        </th>

        <th>
          Cook time
        </th>

        <th>
          Food
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= recipe.id %>
        </td>

        <td>
          <%= recipe.link %>
        </td>

        <td>
          <% if recipe.cuisine.present? %>
            <a href="/cuisines/<%= recipe.cuisine.id %>">
              <%= recipe.cuisine.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if recipe.preparation.present? %>
            <a href="/preparations/<%= recipe.preparation.id %>">
              <%= recipe.preparation.name %>
            </a>
          <% end %>
        </td>

        <td>
          <%= recipe.cook_time %>
        </td>

        <td>
          <% if recipe.food.present? %>
            <a href="/categories/<%= recipe.food.id %>">
              <%= recipe.food.name %>
            </a>
          <% end %>
        </td>

        <td>
          <% if recipe.user.present? %>
            <a href="/users/<%= recipe.user.id %>">
              <%= recipe.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(recipe.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(recipe.updated_at) %> ago
        </td>

        <td>
          <a href="/recipes/<%= recipe.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @recipes, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

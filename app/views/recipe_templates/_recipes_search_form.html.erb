<%= search_form_for @q, :class => collapse_search_form, :id => "recipes_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :link_cont, "Link contains" %>
    <%= f.text_field :link_cont, :class => "form-control", :placeholder => "Link contains" %>
  </div>

  <div class="form-group">
    <%= f.label :cook_time, "Cook time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='cook_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :cook_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Cook time greater than or equal to", :data => {:target => '#cook_timegteqPicker'} %>
          <div class="input-group-append" data-target='#cook_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#cook_timegteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
      <div class='col-md-6'>
        <div class='input-group date' id='cook_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :cook_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Cook time less than or equal to", :data => {:target => '#cook_timelteqPicker'} %>
          <div class="input-group-append" data-target='#cook_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-clock-o"></i></div>
          </div>
          <script type="text/javascript">
            $(function () {
                $('#cook_timelteqPicker').datetimepicker({
                  format: 'LT'
                });
            });
          </script>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>

  <div class="form-group">
    <%= f.label :cuisine_name_cont, "Cuisine name contains" %>
    <%= f.text_field :cuisine_name_cont, :class => "form-control", :placeholder => "Cuisine name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :preparation_name_cont, "Preparation name contains" %>
    <%= f.text_field :preparation_name_cont, :class => "form-control", :placeholder => "Preparation name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :food_name_cont, "Category name contains" %>
    <%= f.text_field :food_name_cont, :class => "form-control", :placeholder => "Category name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/recipes" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#recipes_filters">
  Show filters
</a>

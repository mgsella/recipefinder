<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Recipe #<%= @recipe.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/recipes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link recipe start -->
      <div class="col">
        <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit recipe
        </a>
      </div>
      <!-- Edit link recipe end -->

      <!-- Delete link recipe start -->
      <div class="col">
        <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-block btn-outline-secondary">
          Delete recipe
        </a>
      </div>
      <!-- Delete link recipe end -->
    </div>

    <dl>
      <dt>
        Link
      </dt>
      <!-- Display link start -->
      <dd>
        <%= @recipe.link %>
      </dd>
      <!-- Display link end -->

      <dt>
        Cuisine
      </dt>
      <!-- Display cuisine_id start -->
      <dd>
        <% if @recipe.cuisine.present? %>
          <a href="/cuisines/<%= @recipe.cuisine_id %>">
            <%= @recipe.cuisine.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display cuisine_id end -->

      <dt>
        Preparation
      </dt>
      <!-- Display preparation_id start -->
      <dd>
        <% if @recipe.preparation.present? %>
          <a href="/preparations/<%= @recipe.preparation_id %>">
            <%= @recipe.preparation.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display preparation_id end -->

      <dt>
        Cook time
      </dt>
      <!-- Display cook_time start -->
      <dd>
        <%= @recipe.cook_time %>
      </dd>
      <!-- Display cook_time end -->

      <dt>
        Food
      </dt>
      <!-- Display food_id start -->
      <dd>
        <% if @recipe.food.present? %>
          <a href="/categories/<%= @recipe.food_id %>">
            <%= @recipe.food.name %>
          </a>
        <% end %>
      </dd>
      <!-- Display food_id end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @recipe.user.present? %>
          <a href="/users/<%= @recipe.user_id %>">
            <%= @recipe.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@recipe.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@recipe.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>


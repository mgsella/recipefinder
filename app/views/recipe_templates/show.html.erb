<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Recipe #<%= @recipe.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/recipes" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit recipe
        </a>
      </div>

      <div class="col">
        <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-block btn-outline-secondary">
          Delete recipe
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Link
      </dt>
      <dd>
        <%= @recipe.link %>
      </dd>

      <dt>
        Cuisine
      </dt>
      <dd>
        <% if @recipe.cuisine.present? %>
          <a href="/cuisines/<%= @recipe.cuisine_id %>">
            <%= @recipe.cuisine.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Preparation
      </dt>
      <dd>
        <% if @recipe.preparation.present? %>
          <a href="/preparations/<%= @recipe.preparation_id %>">
            <%= @recipe.preparation.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Cook time
      </dt>
      <dd>
        <%= @recipe.cook_time %>
      </dd>

      <dt>
        Food
      </dt>
      <dd>
        <% if @recipe.food.present? %>
          <a href="/categories/<%= @recipe.food_id %>">
            <%= @recipe.food.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @recipe.user.present? %>
          <a href="/users/<%= @recipe.user_id %>">
            <%= @recipe.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@recipe.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@recipe.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

